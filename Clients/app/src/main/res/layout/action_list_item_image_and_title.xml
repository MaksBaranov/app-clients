<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/action_image_size"
        android:layout_height="@dimen/action_image_size"
        android:layout_marginTop="@dimen/action_image_padding"
        android:layout_marginBottom="@dimen/action_image_padding"
        android:layout_marginLeft="@dimen/action_image_padding"
        />

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/action_title_text_size" />

</LinearLayout>