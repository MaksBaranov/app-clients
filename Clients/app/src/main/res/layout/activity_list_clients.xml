<!-- A DrawerLayout is intended to be used as the top-level content view
     using match_parent for both width and height to consume the full
     space available. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ListClientsActivity">

    <include layout="@layout/toolbar_empty" />
    <include layout="@layout/sliding_tabs" />

    <android.support.v4.view.ViewPager
        android:id="@+id/clients_list_pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1" />

</LinearLayout>